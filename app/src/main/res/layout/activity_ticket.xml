<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/ticket_back_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:text="@string/text_tao_kou_ling"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="33dp"
        android:layout_width="300dp"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/ticket_cover"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@color/gray"/>

        <com.example.taobaounion.ui.custom.LoadingView
            android:id="@+id/ticket_cover_loading"
            android:layout_centerInParent="true"
            android:layout_height="33dp"
            android:layout_width="33dp"/>

        <TextView
            android:id="@+id/ticket_load_retry"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:text="加载出错请点击重试"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/ticket_code"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_ticket_code_bg"
        android:focusable="false"
        android:gravity="center"
        android:layout_width="244dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/ticket_copy_or_open_btn"
        android:text="领劵"
        android:background="@drawable/shape_button_bg"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:textColor="@color/white"/>
    

</LinearLayout>